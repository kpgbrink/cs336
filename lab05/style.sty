padding-size = 10px;

body {
    margin: 10;
    background-color: grey;
}

div {
    border: 2px solid black;
}

// Top and bottom of page
.tanStyle {
    padding: padding-size padding-size padding-size padding-size;
    background-color: antiquewhite;
    #title-bar {
        font-family: monospace;
    }
    #footer {
    font-size: .7em;
    }
}

#page-body {
    display: flex;
    // nav and bottom
    .blueStyle {
        padding: 10px 10px 10px 10px;
        background-color: lightblue;
        min-width: 100;
        font-family: monospace;
    }
    #nav {
        text-align: right;
    }
    // main article on page
    .body {
        padding: padding-size padding-size padding-size padding-size;
        background-color: tan;
        font-family: cursive;
    }
}

// Change positions of blue parts when screen is big enough
@media screen and (max-width: 1000px) {
    #page-body {
        display: block;
        #nav {
            text-align: left;
        }
    }
}
